<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
    <bean id="name" class="java.lang.String">
        <constructor-arg value = "Advait"/>
    </bean>
    <bean id="age" class="java.lang.Integer">
        <constructor-arg value = "25"/>
    </bean>
    <!--
        Used to initialize all beans of the given package
        <context:component-scan base-package="com.courseIn28Mins.learn_spring.game" />
    -->
    <bean id="game" class="com.courseIn28Mins.learn_spring.game.PacManGame"/>
    <bean id="gameRunner" class="com.courseIn28Mins.learn_spring.game.GameRunner">
        <constructor-arg ref="game"/>
    </bean>
</beans>